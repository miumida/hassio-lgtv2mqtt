{
  "name": "lgtv2mqtt",
  "version": "1.0.0",
  "slug": "lgtv2mqtt",
  "description": "Lgtv to MQTT Bridge",
  "auto_uart": true,
  "url": "https://github.com/miumida/hassio-lgtv2mqtt",
  "startup": "before",
  "arch": [
    "aarch64",
    "amd64",
    "armhf",
    "i386"
  ],
  "boot": "auto",
  "map": [
    "share:rw",
    "config:rw"
  ],
  "ports": {
    "8485/tcp": 8485
  },
  "ports_description": {
    "8485/tcp": "Socat tcp-listen port"
  },
  "options": {
    "data_path": "/share/lgtv2mqtt",
    "homeassistant": true,
    "permit_join": false,
    "mqtt": {
      "base_topic": "lgtv2mqtt",
      "server": "mqtt://core-mosquitto",
      "user": "my_user",
      "password": "my_password",
      "webostv": "webostv_ip"
    },
  },
  "schema": {
    "data_path": "str",
    "homeassistant": "bool",
    "permit_join": "bool",
    "mqtt": {
      "base_topic": "str",
      "server": "str",
      "user": "str?",
      "password": "str?",
      "webostv": "str?"
    }
  },
  "image": "miumida/lgtv2mqtt-{arch}"
}
